{
  "name": "ont-run",
  "version": "0.0.13",
  "description": "Ontology-enforced API framework for AI coding agents",
  "type": "module",
  "bin": {
    "ont-run": "./dist/bin/ont.js"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "bun": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./server": {
      "bun": "./src/server/api/index.ts",
      "default": "./dist/server/api/index.js"
    },
    "./config": {
      "bun": "./src/cli/utils/config-loader.ts",
      "default": "./dist/cli/utils/config-loader.js"
    }
  },
  "files": [
    "dist",
    "src",
    "bin"
  ],
  "scripts": {
    "dev": "bun run bin/ont.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "build:cli": "bun build ./bin/ont.ts --outfile ./dist/bin/ont.js --target node --external @modelcontextprotocol/sdk --external zod",
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "prepublishOnly": "bun run build && bun run build:cli && bun run build:types",
    "docs": "cd docs && bun run dev",
    "docs:build": "cd docs && bun run build",
    "docs:preview": "cd docs && bun run preview",
    "test:init": "(cd $(mktemp -d /tmp/ont-run-XXXX) && bun run ~/git/ont/bin/ont.ts init && bun remove ont-run && bun add ~/git/ont)",
    "test:run": "(cd $(mktemp -d /tmp/ont-run-XXXX) && bun run ~/git/ont/bin/ont.ts init && bun remove ont-run && bun add ~/git/ont && bun run dev)",
    "test:review": "(cd $(mktemp -d /tmp/ont-run-XXXX) && bun run ~/git/ont/bin/ont.ts init && bun remove ont-run && bun add ~/git/ont && bun run review)"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.8",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "citty": "^0.1.6",
    "consola": "^3.2.0",
    "hono": "^4.6.0",
    "open": "^10.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.5.0",
    "zod": "^4.0.0"
  },
  "peerDependencies": {
    "bun": ">=1.0.0",
    "zod": ">=4"
  },
  "peerDependenciesMeta": {
    "bun": {
      "optional": true
    }
  },
  "keywords": [
    "api",
    "framework",
    "access-control",
    "ai-agents",
    "hono",
    "zod",
    "typescript"
  ],
  "license": "MIT"
}
